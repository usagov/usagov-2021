{% if view.title == "Life Events Carousel"%}
	<div class="grid-container padding-left-0 padding-right-0">
		<div class="usagov-cards">
			<ul class="usa-card-group">
				<li id="slidesList" class="slides">
					{% for row in rows %}
						<div class="slide usa-card" aria-label="slide {{loop.index}} of 6">
							<a href="{{ drupal_url('node/' ~ row.content["#row"].nid) }}" class="usa-card__container usagov-card text-no-underline" aria-label="{{ row.content["#row"].node_field_data_title }}">
								{{- row.content -}}
							</a>
						</div>
					{% endfor %}
				</li>
			</ul>
		</div>
	</div>

{% endif %}
