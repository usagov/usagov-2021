{% extends "breadcrumb.html.twig" %}

{% block content %}
  <ol class="usa-breadcrumb__list" itemscope itemtype="http://schema.org/BreadcrumbList">
    {% for item in breadcrumb['crumbs'] %}
      <li class="usa-breadcrumb__list-item {{ item.url ? '' : 'usa-breadcrumb__currrent' }}" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
        {% if item.url %}<a href="{{ item.url }}" class="usa-breadcrumb__link" itemprop="item">{% endif %}<span itemprop="name">{{ item.title }}</span>{% if item.url %}</a>{% endif %}
        <meta itemprop="position" content="{{loop.index}}" />
      </li>
    {% endfor %}
  </ol>
{% endblock %}
