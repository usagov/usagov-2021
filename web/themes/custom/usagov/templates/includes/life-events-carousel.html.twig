{{ attach_library('usagov/carousel') }}
<style>

:root {
  --carousel-height: 300px;
}

* {
  box-sizing: border-box;
}

body {
  background-color: #f5f5f5;
  padding: 20px;
  font-family: "Merriweather", serif;
}

/** Wrapper **********************/
.carousel {
  position: relative;
  width: calc(100% - 40px);
  max-width: 900px;
  height: var(--carousel-height);
  margin: 0;
  padding: 0;
  display: flex;
}

/** Previous/next buttons ********/
.previous,
.next {
  margin: 0px;
  padding: 0px;
  width: 40px;
  border: none;
  background-color: transparent;
}

/** Slides track ***************/
.slides {
  list-style: none;
  padding: 0;
  margin: 0;

  display: flex;
  width: 100%;
  overflow: hidden;
}

/** Individual slides ***********/
.slide {
  flex: 0 0 calc(100% - 10px);
  margin: 0 5px;
  padding: 20px;
  height: var(--carousel-height);

  font-size: 18px;
  line-height: 26px;
}

@media screen and (min-width: 480px) {
  .slide {
    flex: 0 0 calc(100% / 2 - 10px);
  }
}
@media screen and (min-width: 1024px) {
  .slide {
    flex: 0 0 calc(100% / 3 - 10px);
  }
}


.slide a {
  color: white;
  text-decoration: none;
}

.slide a:visited {
  color: white;
  text-decoration: none;
}

/** Pagination ******************/
.navigation li {
  width:40px;
  height:40px;
  margin:0px;

  }
.navigation li:not(:last-child) {
margin-right:15px;
}

.navigation li {
  width:40px;
  height:40px;
  border: none;
  background-color: #112F4E;
  color: #00BDE3;
  border: 2px solid #00BDE3;
  font-size:30px;
}

.navigation li a {
  text-decoration:none;
}
.navigation li a:focus {
  outline-offset: 4px;
}

.usa-pagination__button {
  border: none;
}

/** Active slide dot */
.navigation li a[aria-current="true"] {
  background-color: #FFFFFF;
  color: #112F4E;
}

.sr-only {
  position: absolute;
  left: -10000px;
  top: auto;
  width: 1px;
  height: 1px;
  overflow: hidden;
}

.thumbnailBanner {
  width: 100%;
  height: 85px;
  margin: auto;
}

h3 {
  margin: 0px;
}

p {
  margin: 0px;
  font-weight: normal;
}

</style>
