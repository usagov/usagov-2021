<section
	class="grid-container homepage-banner">
	<div class="message-box">
			<h1>{{ node.title.value }}</h1>
			<p>{{ node.body.value | raw}}</p>
		</div>

	<div class="grid-row banner">
		<div class="grid-col">
			<img class="homepage-hero" src="{{file_url(node.field_navigation_banner_image.entity.field_media_image.entity.fileuri)}}">

		</div>
	</div>
</section>

<section class="grid-container how-box">
	<div class="grid-row">
		<div class="grid-col">
			<h2>How do I...</h2>
		</div>
	</div>

	<div class="grid-row">
		{% for link in node.field_homepage_top_links %}
			<div class="how-button grid-col-3 mobile:grid-col-12">
				<a href={{link.uri}}>
					{{link.title}}
				</a>
			</div>
		{% endfor %}
	</div>
</section>
