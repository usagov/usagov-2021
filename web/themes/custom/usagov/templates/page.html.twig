{#
/**
 * @file
 * Theme override to display a single page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template in this directory.
 *
 * Available variables:
 *
 * General utility variables:
 * - base_path: The base URL path of the Drupal installation. Will usually be
 *   "/" unless you have installed Drupal in a sub-directory.
 * - is_front: A flag indicating if the current page is the front page.
 * - logged_in: A flag indicating if the user is registered and signed in.
 * - is_admin: A flag indicating if the user has permission to access
 *   administration pages.
 *
 * Site identity:
 * - front_page: The URL of the front page. Use this instead of base_path when
 *   linking to the front page. This includes the language domain or prefix.
 *
 * Page content (in order of occurrence in the default page.html.twig):
 * - messages: Status and error messages. Should be displayed prominently.
 * - node: Fully loaded node, if there is an automatically-loaded node
 *   associated with the page and the node ID is the second argument in the
 *   page's path (e.g. node/12345 and node/12345/revisions, but not
 *   comment/reply/12345).
 *
 * Regions:
 * - page.government_banner: USWDS Display Government site banner
 * - page.header_top: Items for above the header region.
 * - page.header: Items for the header region.
 * - page.primary_menu: Items for the primary menu region.
 * - page.secondary_menu: Items for the secondary menu region.
 * - page.breadcrumb: Items for the breadcrumb region.
 * - page.hero: USWDS Hero Banner
 * - page.highlighted: Items for the highlighted content region.
 * - page.help: Dynamic help text, mostly for admin pages.
 * - page.content: The main content of the current page.
 * - page.sidebar_first: Items for the first sidebar.
 * - page.sidebar_second: Items for the second sidebar.
 * - page.footer_menu: Items for the footer menu region.
 * - page.footer: Items for the footer region.
 * - page.footer_secondary: Items for below the footer secondary region.
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 */
#}

{% if node.langcode.value %}
  {% set lang = node.langcode.value %}
{% elseif language.id %}
  {% set lang = language.id %}
{% endif %}

{% set content_type = "" %}
{% if node.type.0 != null %}
	{% set content_type = node.type.0.target_id %}
{% endif %}

{% set term_name = "" %}
{% if node.field_page_type.0 != null %}
	{% set term_name = drupal_field('name', 'taxonomy_term', node.field_page_type.0.target_id)[0]['#context']['value'] %}
{% endif %}

{% set show_sidebar = true %}
{% if term_name in ["Navigation Cards Page", "Life Events", "Life Events Landing Page", "Benefits Category Search"] %}
	{% set show_sidebar = false %}
{% endif %}

{% set show_last_updated = term_name in ["", "Standard Page", "Standard Page- Nav Hidden"] %}
{% if is_front or nodetype in ["federal_directory_record", "state_directory_record", "federal_directory_index", "state_directory_index"]  %}
  {% set show_last_updated = false %}
{% endif %}

{% if government_banner %}
	<section class="usa-banner">
		{{ government_banner }}
	</section>
{% endif %}

<div class="usa-overlay"></div>

<header class="{{ header_classes }}" id="header">

	{% if page.header_top %}
		<div class="usa-banner-inner">
			{{ page.header_top }}
		</div>
	{% endif %}

	{% if header_basic %}
		<div class="usa-nav-container">
		{% endif %}
    {% block top_nav %}
      {% if lang == 'es' %}
        {% include '@usagov/top_nav_es.html.twig' %}
      {% else %}
        {% include '@usagov/top_nav.html.twig' %}
      {% endif %}
    {% endblock %}
		{{ page.header }}
		{% if header_basic %}
		</div>
	{% endif %}

</header>

{% if page.hero %}
	<section class="usa-hero">
		<div class="grid-container">
			{{ page.hero }}
		</div>
	</section>
{% endif %}

{% if term_name == "Home Page" %}

	<main class="main-content usa-layout-docs no-footer-gap {{ main_classes }}" id="main-content" data-pagetype="{{term_name}}">
		{{ page.content }}
		<a id="back-to-top" href="#main-content" aria-label="{{ lang == 'en' ? 'Back to top' : 'Subir a la parte superior' }}">
			{{ lang == 'en' ? 'Top' : 'Subir' }}
		</a>
	</main>

{% else %}
  {% block main %}
	<main class="main-content usa-layout-docs usa-section {{ main_classes }}" id="main-content" data-pagetype="{{term_name}}">
  {% endblock %}
		{# link is in html.html.twig #}

		<div class="grid-container">
			{% if page.breadcrumb or page.highlighted or page.help %}
				{% if pagetype == "Navigation Cards Page"%}
				<div class="grid-row breadcrumb-nav-spacing">
					{{ page.breadcrumb }}
				</div>
				{% else %}
				<div class="grid-row breadcrumb-spacing">
					{{ page.breadcrumb }}
				</div>
				{% endif %}

				<div class="">
					{{ page.highlighted }}
				</div>

				{# Help #}
				{% if page.help %}
					<div class="grid-row">
						{{ page.help }}
					</div>
				{% endif %}
			{% endif %}

			<div class="grid-row grid-gap">
        {%  block sidebar %}
          {% if page.sidebar_first and show_sidebar %}
            <aside class="usa-layout-docs__sidenav desktop:grid-col-4 layout-sidebar-first">
              {{ page.sidebar_first }}
            </aside>
          {% endif %}
        {% endblock %}

				<div class="usa-layout-docs__main usa-prose desktop:grid-col-{% if (page.sidebar_first or page.sidebar_second) and show_sidebar %}8{% else %}fill{% endif %}">
          {% block content %}
          {{ page.content }}
          {% endblock %}

          {% block additional_body %}
            <div class="additional_body_info">
              {% if show_last_updated %}

                {% if node.changed.value %}
                  <p id="last-updated">{{ lang == 'en' ? 'LAST UPDATED: ' : 'ÚLTIMA ACTUALIZACIÓN: '}}
                    {% set date = node.changed.value %}
                    {% include '@usagov/dates.html.twig' %}
                  </p>
                {% endif %}
              {% endif %}

              {% include '@usagov/sharethispage.html.twig' %}
              {% include '@usagov/haveaquestion.html.twig' %}
              <div id="pagesurvey-qual-container"></div>
            </div>
          {% endblock %}

				</div>
				{# /.layout-content #}
				{% if page.sidebar_second %}
					<aside class="usa-layout-docs__sidenav desktop:grid-col-4 layout-sidebar-second" role="complementary">
						{{ page.sidebar_second }}
					</aside>
				{% endif %}
			</div>
		</div>

		<a id="back-to-top" href="#main-content" aria-label="{{ lang == 'en' ? 'Back to top' : 'Subir a la parte superior' }}">
			{{ lang == 'en' ? 'Top' : 'Subir' }}
		</a>

	</main>

{% endif %}

{% include '@usagov/footer_nav.html.twig' %}
