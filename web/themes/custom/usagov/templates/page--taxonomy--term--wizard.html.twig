{# Custom left navigation for wizards. See usagov_wizard module.#}

{% extends "page.html.twig" %}

{%  block sidebar %}
    <aside class="usa-layout-docs__sidenav desktop:grid-col-4 layout-sidebar-first">
      {% for menu_entity in menu_entities %}
        {% if loop.first %}
        <ul class="usa-sidenav">
          <li class="usa-sidenav__item">
            <a{% if start_level == 0 %} class="usa-current" onclick="return false;" {% else %} href="{{ menu_entity.url }}" class="active-trail"{% endif %}>
                {{ menu_entity.label }}
            </a>
          </li>
        </ul>
        {% else %}
        <ul class="usa-sidenav__sublist">
          <li class="usa-sidenav__item">
            <a href="{{ menu_entity.link }}" class="active-trail">
              {{ menu_entity.label }}
            </a>
          </li>
        </ul>
        {% endif %}
      {% endfor %}
    </aside>
{% endblock %}
