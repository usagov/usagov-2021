{% set lang = node.langcode.value %}
<div class="usa-footer__secondary-section">
	<div class="grid-container">
		<div class="grid-row grid-gap">

			<div class="usa-footer__logo grid-row mobile-lg:grid-col-6 mobile-lg:grid-gap-2">
				<span id="footer-phone">


					<div class="mobile-lg:grid-col-auto">
						<h4 class="usa-footer__logo-heading">
							{{ lang == 'es' ?  "Centro de llamadas de USAGov" : "USAGov Contact Center"  }}
						</h4>
					</div>

					<div class="mobile-lg:grid-col-auto">
						<p class="footer-question">
							{{ lang == 'es' ?   "Haga una pregunta a USAGov en Español al" : "Ask USA.gov a question at" }}
						</p>

						<address class="usa-footer__address">
							<div class="usa-footer__contact-info grid-row grid-gap">
								{% if lang =="es" %}
									<a href="/es/llamenos">
									{% else %}
										<a href="/phone">
										{% endif %}
										1-844-USAGOV1 (1-844-872-4681)
									</a>
								</div>
							</address>

						</div>

					</span>
				</div>

				<div class="usa-footer__contact-links mobile-lg:grid-col-6">
					<div class="footer-social-block">
						<h4 class="usa-footer__contact-heading">
							{{ lang == 'es' ?   "Encuéntrenos en las  redes sociales" : "Find us on social media" }}
						</h4>

						<div class="usa-footer__social-links en-links grid-row">

							<div class="grid-col-auto">
								{% if lang == "es" %}
									<a class="usa-social-link" href="https://www.facebook.com/usagovespanol">
									{% else %}
										<a class="usa-social-link" href="https://www.facebook.com/USAgov">
										{% endif %}
										<img class="image-svg-test" src="/themes/custom/usagov/images/Facebook_Icon.svg" alt="Facebook USAGov"/>
										<span>Facebook</span>
									</a>
								</div>

								<div class="grid-col-auto">
									{% if lang == "es" %}
										<a class="usa-social-link" href="https://twitter.com/usagovespanol">
										{% else %}
											<a class="usa-social-link" href="https://twitter.com/USAgov">
											{% endif %}
											<img class="image-svg-test" src="/themes/custom/usagov/images/Twitter_Icon.svg" alt="Twitter USAGov"/>

											<span>Twitter</span>
										</a>
									</div>

									<div class="grid-col-auto">
										{% if lang == "es" %}
											<a class="usa-social-link" href="https://www.youtube.com/USAgovespanol">
											{% else %}
												<a class="usa-social-link" href="https://www.youtube.com/usagov1">
												{% endif %}
												<img class="image-svg-test" src="/themes/custom/usagov/images/Youtube_Icon.svg" alt="Youtube USAGov"/>

												<span>YouTube</span>
											</a>
										</div>

										{% if lang != "es" %}
											<div class="grid-col-auto">
												<a class="usa-social-link" href="https://www.instagram.com/usagov/">
													<img class="image-svg-test" src="/themes/custom/usagov/images/Instagram_Icon.svg" alt="Instagram USAGov"/>

													<span>Instagram</span>
												</a>
											</div>
										{% endif %}

									</div>
								</div>

							</div>

						</div>
					</div>
				</div>
