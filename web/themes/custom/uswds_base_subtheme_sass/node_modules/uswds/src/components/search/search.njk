{# Match input with its label â€” prevents duplicate IDs #}
{%
  set input_mod = 'search-field-' + input_modifier if input_modifier else 'search-field'
%}

{# `usa-search__submit-text` is the default, but small variation requires a different class #}
{%
  set button_class = 'usa-search__submit-text' if modifier !== 'usa-search--small' else 'usa-sr-only'
%}

<section aria-label="{{ label }} search component">
  <form class="usa-search {{ modifier | default('') }}" role="search">
    <label class="usa-sr-only" for="{{ input_mod }}">{{ text }}</label>
    <input class="usa-input" id="{{ input_mod }}" type="search" name="search">
    <button class="usa-button" type="submit">
      <span class="{{ button_class }}">{{ text }}</span>
    </button>
  </form>
</section>
