#!/bin/bash
set -e

usage="
$0: Runs node inside the docker container.

Usage:
   $0 -h
   $0 Node Command

Options:
-h:            show help and exit
ARG            Node command
"

PREAMBLE=$( pwd -P )/bin/includes/preamble.sh
if [ -f "$PREAMBLE" ]; then
  # shellcheck source=bin/includes/preamble.sh
  . "$PREAMBLE"
else
   echo Cannot find preamble at "$PREAMBLE"
   exit 1
fi

docker compose run \
  --rm \
  --no-deps \
  node \
  node "$@"

#  -v $(pwd):/var/www:delegated \
