#!/bin/bash
set -e

usage="
$0: Runs node inside the docker container.

Usage:
   $0 -h
   $0 ARG

Options:
-h:            show help and exit
ARG            Node command
"
if [[ "$1" == "-h" ]]; then
    echo "${usage}"
    exit 1
fi

docker compose run \
  --rm \
  --no-deps \
  node \
  node "$@"

#  -v $(pwd):/var/www:delegated \
