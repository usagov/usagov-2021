#!/bin/sh

# we might be running in circleci (really?) 
if [ -f /home/circleci/project/env.local ]; then
  . /home/circleci/project/env.local
fi
# we might be running from a local dev machine
SCRIPT_DIR="$(dirname "$0")"
if [ -f $SCRIPT_DIR/env.local ]; then
  . $SCRIPT_DIR/env.local
fi
if [ -f ./env.local ]; then
  . ./env.local
fi

DEPLOY_TAG=${1}
LOCAL_DEST_DIR=${1}

if [ -z "$DEPLOY_TAG" ]; then
  echo "Usage: $0 <tag>"
  echo "This will create a backup named for the tag in the local directory. Use static-site-list to see available tags." 
  exit 1
fi

mkdir $LOCAL_DEST_DIR
success=$?

if [ "$success" != "0" ]; then
    echo "Unable to create directory $LOCAL_DEST_DIR."
    exit 1
fi

source bin/cloudgov/get-s3-access storage >/dev/null 2>&1

echo "Downloading files from s3. This could take awhile." 
aws s3 cp --only-show-errors s3://$S3_BUCKET/web/ $LOCAL_DEST_DIR --recursive

echo "Creating zip file usagov-${LOCAL_DEST_DIR}.zip." 
zip -rq usagov-${LOCAL_DEST_DIR}.zip ${LOCAL_DEST_DIR}

echo "Done." 
exit 0
