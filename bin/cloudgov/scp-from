#!/bin/bash

echo "check commands ------"
set -e
which jq
which sshpass
echo ""
set +e

app_name=$1
scp_src=$2
scp_dst=$3
instance_index=${4:-0}

echo "getting ssh_host" 
ssh_host=`cf curl /v2/info | jq .app_ssh_endpoint | awk -F : '{print $1}' | sed 's/\"//g'`
echo $ssh_host
echo "getting app_id" 
app_id=`cf env ${app_name} | grep application_id | awk '{print $2}' | sed 's/\"//g' | sed 's/,//g'`
echo "getting ssh_code" 
ssh_code=`cf ssh-code`

echo "settings ------"
echo "ssh_host : ${ssh_host}"
echo "app_name : ${app_name}"
echo "app_id : ${app_id}"
echo "ssh_code : ${ssh_code}"
echo ""

echo "start scp ------"
echo "sshpass -v -p \"${ssh_code}\" scp -v -P 22 -o StrictHostKeyChecking=no -o User=cf:${app_id}/${instance_index} ${ssh_host}:${scp_src} ${scp_dst}"

sshpass -v -p "${ssh_code}" scp -v -P 22 -o StrictHostKeyChecking=no -o User=cf:${app_id}/${instance_index} ${ssh_host}:${scp_src} ${scp_dst}
# sshpass -p "${ssh_code}" scp -v -P 2222 -o StrictHostKeyChecking=no -o User=cf:${app_id}/${instance_index} ${ssh_host}:${scp_src} ${scp_dst}
