#!/bin/sh
for space in dev-dr dev stage prod; do
	if [ ! -f $space.dat ]; then
		cf t -s $space &>/dev/null
		bin/cloudgov/cf-checks/check-rds-db-space-used $space | sed -E '/^(\s*)$/d' | cut -f 2 > $space.dat
	fi
	if [ -f $space.dat ]; then
		echo -n "Disk used for db in $space: " && cat $space.dat | tr -s '\r\n' '\n' | paste -
	fi
done
