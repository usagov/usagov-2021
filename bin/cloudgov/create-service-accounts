#!/bin/bash

if ! command -v cf &> /dev/null
then
    echo "CF : the cloud foundry client could not be found and is required"
    exit
fi

CLOUDDIR=$(dirname "$0")

$CLOUDDIR/space dev
cf create-service cloud-gov-service-account space-deployer cci-prod-service-account
cf create-service-key cci-prod-service-account cci-prod-service-key
cf service-key cci-prod-service-account cci-prod-service-key

$CLOUDDIR/space stage
cf create-service cloud-gov-service-account space-deployer cci-stage-service-account
cf create-service-key cci-stage-service-account cci-stage-service-key
cf service-key cci-stage-service-account cci-stage-service-key

$CLOUDDIR/space prod
cf create-service cloud-gov-service-account space-deployer cci-dev-service-account
cf create-service-key cci-dev-service-account cci-dev-service-key
cf service-key cci-dev-service-account cci-dev-service-key
