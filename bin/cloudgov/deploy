#!/usr/bin/env bash

usage="
$0: Attempts to setup the CMS app by launching apps and creating their required services.

Usage:
   $0 -h

Options:
-h:            show help and exit
"

PREAMBLE=$(sed -E 's/bin\/.*\/includes/bin\/includes/g' <<< "$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )/includes/preamble.sh")
if [ -f "$PREAMBLE" ]; then
  # shellcheck source=bin/includes/preamble.sh
  . "$PREAMBLE"
else
   echo Cannot find preamble at "$PREAMBLE"
   exit 1
fi

. $SCRIPT_DIR/deploy-cms
. $SCRIPT_DIR/deploy-waf
