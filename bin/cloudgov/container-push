#!/bin/sh
#
# This script will attempt to store a container image on docker hub
# to be used when launching cloud.gov images
#

CONTAINERTAG=${1}
CONTAINERTAG2=${2}

if [ -z "$CONTAINERTAG" ]
then
      echo "Must specify a container tag to push"
      exit 1;
fi;

echo "docker push ednark/usagov-2021:cms-$CONTAINERTAG"
docker push ednark/usagov-2021:cms-$CONTAINERTAG
if [ -n "$CONTAINERTAG2" ]
then
    echo "docker push ednark/usagov-2021:cms-$CONTAINERTAG2"
    docker push ednark/usagov-2021:cms-$CONTAINERTAG2
fi

echo "docker push ednark/usagov-2021:waf-$CONTAINERTAG"
docker push ednark/usagov-2021:waf-$CONTAINERTAG
if [ -n "$CONTAINERTAG2" ]
then
    echo "docker push ednark/usagov-2021:waf-$CONTAINERTAG2"
    docker push ednark/usagov-2021:waf-$CONTAINERTAG2
fi
