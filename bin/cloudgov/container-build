#!/bin/sh
#
# This script will attempt to create a container image
# to be used when launching cloud.gov images
#

DOCKERREPO=dnark
CONTAINERNAME=usagov-2021

GITBRANCH=$(git symbolic-ref --short HEAD 2>/dev/null || echo "")
GITCOMMIT=$(git rev-parse HEAD 2>/dev/null || echo "")
GITTAG=$(git tag --points-at $(git rev-parse HEAD 2>/dev/null) | grep ^v | sort -rV | head -n 1 2>/dev/null || echo "")
CONTAINERTAG=${1:-$GITBRANCH}

CONTAINERTAG2=${2}

if [ -z "$CONTAINERTAG" ]
then
      echo "Must specify a container tag to build"
      exit 1;
fi;


echo "Building ${CONTAINERNAME}:cms-${CONTAINERTAG} ${CONTAINERTAG2}"

chmod -R u+w ./web/sites/default/

docker build --force-rm \
    -t $DOCKERREPO/$CONTAINERNAME:cms-$CONTAINERTAG \
    -f .docker/Dockerfile-cms . \
    --build-arg GITBRANCH=$GITBRANCH \
    --build-arg GITCOMMIT=$GITCOMMIT \
    --build-arg GITTAG=$GITTAG

if [ -n "$CONTAINERTAG2" ]
then
    echo "docker tag $DOCKERREPO/$CONTAINERNAME:cms-$CONTAINERTAG $DOCKERREPO/$CONTAINERNAME:cms-$CONTAINERTAG2"
    docker tag $DOCKERREPO/$CONTAINERNAME:cms-$CONTAINERTAG $DOCKERREPO/$CONTAINERNAME:cms-$CONTAINERTAG2
fi


echo "Building ${CONTAINERNAME}:waf-${CONTAINERTAG} ${CONTAINERTAG2}"

chmod -R u+w ./web/sites/default/

docker build --force-rm \
    -t $DOCKERREPO/$CONTAINERNAME:waf-$CONTAINERTAG \
    -f .docker/Dockerfile-waf .docker \
    --build-arg GITBRANCH=$GITBRANCH \
    --build-arg GITCOMMIT=$GITCOMMIT \
    --build-arg GITTAG=$GITTAG

if [ -n "$CONTAINERTAG2" ]
then
    docker tag $DOCKERREPO/$CONTAINERNAME:waf-$CONTAINERTAG $DOCKERREPO/$CONTAINERNAME:waf-$CONTAINERTAG2
fi
