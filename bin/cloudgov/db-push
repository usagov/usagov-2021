#!/bin/sh

# we might be running in circleci
if [ -f /home/circleci/project/env.local ]; then
  . /home/circleci/project/env.local
fi
# we might be running from a local dev machine
SCRIPT_DIR="$(dirname "$0")"
if [ -f $SCRIPT_DIR/env.local ]; then
  . $SCRIPT_DIR/env.local
fi
if [ -f ./env.local ]; then
  . ./env.local
fi

# just testing?
#export echo=echo

DB_GZIP_FILE=${1}
if [ x"$DB_GZIP_FILE" != x ]; then   
  # locate a local database gzip file
  if [ x$echo != x ]; then
    if [ -f "$DB_GZIP_FILE" ]; then     
      echo "Found local database file: $DB_GZIP_FILE"
    else
      echo "ERROR: Local database file not found: $DB_GZIP_FILE"
      exit 1
    fi
  fi
else
   echo "Usage: $0 <db zip file> <tag?>"
   exit 1
fi

$echo source bin/cloudgov/get-s3-access storage >/dev/null 2>&1

# upload that database gzip file to a location within an s3 bucket represented by the tag
echo  aws s3 cp --only-show-errors $DB_GZIP_FILE s3://$S3_BUCKET/db-backup/$DB_GZIP_FILE
$echo aws s3 cp --only-show-errors $DB_GZIP_FILE s3://$S3_BUCKET/db-backup/$DB_GZIP_FILE
