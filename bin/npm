#!/bin/bash
set -e

usage="
$0: Runs npm inside the docker container.

Usage:
   $0 -h
   $0 NPM command

Options:
-h:            show help and exit
ARG            npm command
"

PREAMBLE=$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"/includes/preamble.sh"
if [ -f "$PREAMBLE" ]; then
  # shellcheck source=bin/includes/preamble.sh
  . "$PREAMBLE"
else
   echo Cannot find preamble at "$PREAMBLE"
   exit 1
fi

docker compose run \
  --rm \
  --no-deps \
  node \
  npm "$@"
