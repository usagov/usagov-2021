#!/bin/sh

usage="
$0: Selects a version of the static site by tag in the s3 backup and pushes it to current on current environment.

Usage:
   $0 -h
   $0 DEPLOY_TAG

Options:
-h:     show help and exit
DEPLOY_TAG:    the tag to deploy
"

PREAMBLE=$(sed -E 's/bin\/.*\/includes/bin\/includes/g' <<< "$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )/includes/preamble.sh")
if [ -f "$PREAMBLE" ]; then
  # shellcheck source=bin/includes/preamble.sh
  . "$PREAMBLE"
else
  echo Cannot find preamble at "$PREAMBLE"
  exit 1
fi

DEPLOY_TAG=$1
SPACE=$( cf target | grep space: | awk '{ print $2 }')

if [ -z "$DEPLOY_TAG" ]; then
  echo "Usage: $0 <tag>"
  echo "This will attempt to deploy the s3 backup of the static site to $SPACE"
  exit 1
else
  echo "Attempting to deploy the $DEPLOY_TAG s3 backup of the static site to $SPACE"
fi

source bin/cloudgov/get-s3-access storage >/dev/null 2>&1

echo aws s3 sync s3://$S3_BUCKET/web-backup/$DEPLOY_TAG/ s3://$S3_BUCKET/web/ --only-show-errors --delete --acl public-read
$echo aws s3 sync s3://$S3_BUCKET/web-backup/$DEPLOY_TAG/ s3://$S3_BUCKET/web/ --only-show-errors --delete --acl public-read
