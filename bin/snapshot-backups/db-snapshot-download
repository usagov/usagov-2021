#!/bin/sh

usage="
$0:  Pulls the database backup for the provided tag from space to the local directory.

Usage:
   $0 -h
   $0 DEPLOY_TAG

Options:
-h:            show help and exit
DEPLOY_TAG:    the tag to deploy
"

PREAMBLE=$( cd -- "$(dirname "$0")/.." >/dev/null 2>&1 ; pwd -P )"/includes/preamble.sh"
if [ -f "$PREAMBLE" ]; then
  # shellcheck source=bin/includes/preamble.sh
  . "$PREAMBLE"
else
  echo Cannot find preamble at "$PREAMBLE"
  exit 1
fi

DEPLOY_TAG=${1}

if [ -z "$DEPLOY_TAG" ]; then
  echo "Usage: $0 <tag>"
  echo "This will attempt to pull the database backup for the provided tag in the local directory. Use db-list to see available db backups."
  exit 1
fi

#SPACE=$( cf target | grep space: | awk '{ print $2 }')
#PREFIX=usagov-${DEPLOY_TAG}-${SPACE}
GZIP_FILE=${DEPLOY_TAG}.sql.gz

$echo source bin/cloudgov/get-s3-access storage >/dev/null 2>&1

echo "Attempting to download $GZIP_FILE from s3. This could take awhile."
echo  aws s3 cp --only-show-errors s3://$S3_BUCKET/db-backup/$GZIP_FILE $GZIP_FILE
$echo aws s3 cp --only-show-errors s3://$S3_BUCKET/db-backup/$GZIP_FILE $GZIP_FILE
