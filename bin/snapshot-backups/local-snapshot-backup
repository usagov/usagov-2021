#!/usr/bin/env bash

# we might be running in circleci
if [ -f /home/circleci/project/env.local ]; then
  . /home/circleci/project/env.local
fi
# we might be running from a local dev machine
SCRIPT_DIR="$(dirname "$0")"
if [ -f $SCRIPT_DIR/env.local ]; then
  . $SCRIPT_DIR/env.local
fi
if [ -f ./env.local ]; then
  . ./env.local
fi
if [ -f $SCRIPT_DIR/../deploy/includes ]; then
  . $SCRIPT_DIR/../deploy/includes
else
   echo Cannot find $SCRIPT_DIR/../deploy/includes
   exit 1
fi

# just testing?
if [ x$1 = x"--dryrun" ]; then
  echo=echo
  dryrun=$1
  shift
fi

SPACE=${1:-please-provide-space-name-as-first-argument}
SPACE=${SPACE,,}
assertCurSpace $SPACE
shift

GIT_TAG=$1
if [ -z "$GIT_TAG" ]; then
  echo "Usage: $0 <env> <jira ticket> <cci build id>"
  echo "This will attempt to deploy the s3 backup of the database to $SPACE"
  exit 1
fi
shift

CCI_BUILD=$1
if [ -z "$CCI_BUILD" ]; then
  echo "Usage: $0 <env> <jira ticket> <cci build id>"
  echo "This will attempt to deploy the s3 backup of the database to $SPACE"
  exit 1
fi
shift

RETVAL=0
while [ "1" != "0" ]; do
  bin/deploy/try-tome-disable
  RETVAL=$?
  break
done

if [ "$RETVAL" = "0" ]; then
  $echo bin/snapshot-backups/site-snapshot-create   $SPACE $GIT_TAG.$SPACE.$CCI_BUILD
  $echo bin/snapshot-backups/db-dump-to-snapshot    $SPACE $GIT_TAG.$SPACE.$CCI_BUILD
  $echo bin/snapshot-backups/public-snapshot-create $SPACE $GIT_TAG.$SPACE.$CCI_BUILD
else
  echo "Did not run backup scripts.  Retval of tome check was: '  $RETVAL'"
fi

bin/deploy/try-tome-enable
