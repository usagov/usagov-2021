#!/usr/bin/env bash

usage="
$0: Pushes a local build of the static site to current environment.

Usage:
   $0 -h
   $0 DEPLOY_TAG

Options:
-h:     show help and exit
DEPLOY_TAG:    the tag to deploy
"

PREAMBLE=$(sed -E 's/bin\/.*\/includes/bin\/includes/g' <<< "$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )/includes/preamble.sh")
if [ -f "$PREAMBLE" ]; then
  # shellcheck source=bin/includes/preamble.sh
  . "$PREAMBLE"
else
  echo Cannot find preamble at "$PREAMBLE"
  exit 1

# just testing?
if [ x$1 == x"--dryrun" ]; then
  export echo=echo
  shift
fi

DEPLOY_TAG=${1}

if [ -z "$DEPLOY_TAG" ]; then
  echo "Usage: $0 <tag>"
  echo "This will create a backup named for the tag in the local directory. Use static-site-list to see available tags."
  exit 1
fi

if [ -f $DEPLOY_TAG.zip ]; then
  mv $DEPLOY_TAG.zip $DEPLOY_TAG.zip.bak
fi

mkdir $DEPLOY_TAG
success=$?

if [ "$success" != "0" ]; then
    echo "Unable to create directory $DEPLOY_TAG.  Does it already exist?"
    exit 1
fi

$echo source bin/cloudgov/get-s3-access storage >/dev/null 2>&1

echo "Downloading files from s3 to local directory './${DEPLOY_TAG}'. This could take awhile."
echo aws s3 cp --only-show-errors s3://$S3_BUCKET/web-backup/$DEPLOY_TAG $DEPLOY_TAG --recursive
$echo aws s3 cp --only-show-errors s3://$S3_BUCKET/web-backup/$DEPLOY_TAG $DEPLOY_TAG --recursive

echo "Creating zip file ${DEPLOY_TAG}.zip"
echo zip -rv ${DEPLOY_TAG}.zip ${DEPLOY_TAG}
$echo zip -rv ${DEPLOY_TAG}.zip ${DEPLOY_TAG} &> $DEPLOY_TAG.zip.log
success=$?

if [ "$success" != "0" ]; then
  echo "Unable to create Zip file of backup directory $DEPLOY_TAG"
  exit 1
fi

FILE_COUNT=$(grep -c deflated ${DEPLOY_TAG}.zip.log)
rm -rf $DEPLOY_TAG
rm ${DEPLOY_TAG}.zip.log

if [ $FILE_COUNT -lt 1500 ]; then
  echo "Only ~$FILE_COUNT files found in the $DEPLOY_TAG backup."
  echo "This is probably not a good thing"
  exit 1
fi

echo "Done."
exit 0
