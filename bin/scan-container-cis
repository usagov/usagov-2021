#!/bin/sh

usage="
$0: Spins up docker bench security container and runs Docker CIS Benchmarks against selected container.

Usage:
   $0 -h
   $0 APPNAME

Options:
-h:            show help and exit
APPNAME:       Name of the app to be tested (default: cms)
"

PREAMBLE=$(sed -E 's/bin\/.*\/includes/bin\/includes/g' <<< "$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )/includes/preamble.sh")
if [ -f "$PREAMBLE" ]; then
  # shellcheck source=bin/includes/preamble.sh
  . "$PREAMBLE"
else
   echo Cannot find preamble at "$PREAMBLE"
   exit 1
fi

DOCKERUSER=${DOCKERUSER:-gsatts}
DOCKERREPO=${DOCKERREPO:-usagov-2021}

APPNAME=${1:-cms}

GITBRANCH=$(git symbolic-ref --short HEAD 2>/dev/null || echo "")
CTAG=${2:-$GITBRANCH}

docker run -it --rm --net host --pid host --userns host --cap-add audit_control \
    -e DOCKER_CONTENT_TRUST=1 \
    -v /var/run/docker.sock:/var/run/docker.sock \
    --label docker_bench_security \
    docker-bench-security -b \
      -c "container_images,container_runtime"


# -t "$DOCKERUSER/$DOCKERREPO:$APPNAME-$CTAG"
