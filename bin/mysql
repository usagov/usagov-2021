#!/bin/bash
set -e

usage="
$0: Runs sql inside the docker container.

Usage:
   $0 -h
   $0 ARG

Options:
-h:            show help and exit
ARG            SQL query string
"
if [[ "$1" == "-h" ]]; then
    echo "${usage}"
    exit 1
fi


docker compose run \
  --rm \
  --workdir /var/www \
  cms \
  drush --root=/var/www/web sql-cli "$@"

#  -v $(pwd):/var/www:delegated \
