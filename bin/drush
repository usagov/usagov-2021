#!/bin/bash
set -e

usage="
$0: Runs Drush in your local container.

Usage:
   $0 -h
   $0 Drush command

Options:
-h:            show help and exit
ARG:           Drush command
"

PREAMBLE=$(printf "$( ( cd -- "$(dirname "$0")" >/dev/null 2>&1 || exit ) && pwd -P )/bin/includes/preamble.sh" | sed -E 's/bin\/.*\/includes/bin\/includes/g')
if [ -f "$PREAMBLE" ]; then
  # shellcheck source=bin/includes/preamble.sh
  . "$PREAMBLE"
else
   echo Cannot find preamble at "$PREAMBLE"
   exit 1
fi

docker compose run \
  --rm \
  --workdir /var/www \
  cms \
  drush --root=/var/www/web "$@"

#  -v $(pwd):/var/www:delegated \
