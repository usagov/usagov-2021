
{% set radio_buttons = true %}

{% if radio_buttons %}

<fieldset class="usa-fieldset maxw-tablet margin-x-auto">
    {% for item in items %}
        {% set title = item.content["#options"]["entity"].field_option_name.0.value %}
        {% if title == null %}
            {% set title = item.content["#title"] %}
        {% endif %}

        {% set id = title|lower|replace({' ': '-', '.': '-'}) %}
        {% set url = item.content["#url"] %}
        
        {% if element["#language"] == "en" %}
        <input class="usa-radio__input usa-radio__input--tile" type="radio" id="{{id}}" name="options" value="{{url}}#block-wizardenglish">
        <label class="usa-radio__label" for="{{id}}">{{title}}</label>
        {% endif %}
        {% if element["#language"] == "es" %}
        <input class="usa-radio__input usa-radio__input--tile" type="radio" id="{{id}}" name="options" value="{{url}}#block-wizardespanol">
        <label class="usa-radio__label" for="{{id}}">{{title}}</label>
        {% endif %}
    {% endfor %}

    <div class="grid-row flex-justify-center maxw-mobile margin-x-auto margin-top-6">
        <button class="usa-button" onclick="window.location.href = document.querySelector(`input[name='options']:checked`).value">
            {% if element["#language"] == "en" %}
            Begin
            {% elseif element["#language"] == "es" %}
            Empezar
            {% endif %}
            
        </button>
    </div>
</fieldset>

{% else %}

<ul class="add-list-reset">
{% for item in items %}
    <li>
        <a href="{{item.content["#url"]}}" class="usa-button usa-button--secondary usa-button--big">{{item.content["#title"]}}</a>
    </li>
{% endfor %}
</ul>

{% endif %}
