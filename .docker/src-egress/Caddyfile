# TODO
# - For staging/prod:
#   - Document how to tunnel sftp://
#   - Document how to test with cf ssh port-forwarding to your browser!
{
	debug
	log {
		format console
		level INFO
	}
	auto_https off
}

:{$PORT} {
	route {
		forward_proxy {
			basic_auth {$PROXY_USERNAME} {$PROXY_PASSWORD}
			acl {
				deny_file deny.acl
				allow_file allow.acl
				deny all
			}
			ports 80 443 22 61443
			serve_pac
		}
	}
	log {
		format json
		level INFO
		output stdout
	}
}
