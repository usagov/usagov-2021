FROM node:20-alpine
USER root
COPY .docker/src-reporter .

RUN chmod +x /createreport.sh\
    && apk upgrade --update \
    && apk add --no-cache --virtual .persistent-deps \
       jq \
       bash \
       curl \
       nginx

# re-copy our nginx config over what the nginx package provided.
COPY .docker/src-reporter/etc/nginx/* /etc/nginx/

RUN rm /etc/nginx/httpd.d/default.conf \
    && /usr/sbin/nginx -s reload \
    && npm install -g analytics-reporter

WORKDIR /analytics-reporter
RUN npm install minimist
RUN npm install
WORKDIR /
CMD ["./createreport.sh"]